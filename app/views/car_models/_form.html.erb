<%= form_with model: @car_model, local: true do |f| %>
    <p><%= f.label :name, 'Nome'%>
    <%= f.text_field :name %></p>

    <p><%= f.label :motorization, 'Motorização'%>
    <%= f.text_field :motorization %></p>

    <p><%= f.label :year, 'Ano'%>
    <%= f.text_field :year %></p>

    <p><%= f.label :fuel_type, 'Combustível'%>
    <%= f.text_field :fuel_type %></p>

   <div>
    <%= f.label :manufacturer_id, 'Fabricante'%>
    <%= f.collection_select(:manufacturer_id, @manufacturers, :id, :name)%>
   </div>
   <div> 
    <%= f.label :car_category_id, 'Categoria'%>
    <%= f.collection_select(:car_category_id, @car_categories, :id, :name)%>  
   </div>

    <%= f.submit 'Enviar'%>

<% end %>